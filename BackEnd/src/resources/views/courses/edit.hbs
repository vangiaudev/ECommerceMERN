<div class="mt-4">
    <h3>Cập nhật khóa học</h3>
    <form method="POST" action="/courses/{{course._id}}?_method=PUT">
  <div class="form-group">
    <label for="name">Tên</label>
    <input value="{{course.name}}" type="text" class="form-control" name="name" id="name" placeholder="Nhập tên khóa học">
  </div>
  <div class="form-group">
    <label for="description">Mô tả</label>
    <textarea  class="form-control" name="description" id="description" placeholder="Nhập mô tả">{{course.description}}</textarea>
  </div>
  <div class="form-group">
    <label for="videoId">Video</label>
    <input value="{{course.videoId}}" type="text" class="form-control" name="videoId" id="videoId" placeholder="Nhập link video">
  </div>
  <div class="form-group">
    <label for="level">Cấp độ</label>
    <input value="{{course.level}}" type="text" class="form-control" name="level" id="level" placeholder="Nhập cấp độ">
  </div>
 
  <button type="submit" class="btn btn-primary">Lưu lại</button>
</form>
</div>