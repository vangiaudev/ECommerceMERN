<div class="mt-4">
    <h3>Tạo khóa học</h3>
    <form method="POST" action="/courses/store">
  <div class="form-group">
    <label for="name">Tên</label>
    <input type="text" class="form-control" name="name" id="name" placeholder="Nhập tên khóa học">
  </div>
  <div class="form-group">
    <label for="description">Mô tả</label>
    <input type="text" class="form-control" name="description" id="description" placeholder="Nhập mô tả">
  </div>
  <div class="form-group">
    <label for="videoId">Video</label>
    <input type="text" class="form-control" name="videoId" id="videoId" placeholder="Nhập link video">
  </div>
  <div class="form-group">
    <label for="level">Cấp độ</label>
    <input type="text" class="form-control" name="level" id="level" placeholder="Nhập cấp độ">
  </div>
 
  <button type="submit" class="btn btn-primary">Thêm khóa học</button>
</form>
</div>